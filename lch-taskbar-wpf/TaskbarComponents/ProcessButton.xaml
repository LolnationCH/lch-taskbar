<Button x:Class="lch_taskbar_wpf.TaskbarComponents.ProcessButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:lch_taskbar.TaskbarComponents"
             mc:Ignorable="d" 
             VerticalAlignment="Center"
             HorizontalAlignment="Center"
             Click="Shortcut_Click"
             Padding="5"
             Style="{StaticResource ButtonWithNoOver}"
             d:DesignHeight="450" d:DesignWidth="800">
  <StackPanel VerticalAlignment="Stretch" Orientation="Horizontal" Name="MainContent">
    <Image x:Name="ProcessIcon" MaxWidth="25" MaxHeight="25" Margin="0,0,5,0"/>
    <local:ConfiguredTextBlock x:Name="ProcessName" Text="Title" VerticalAlignment="Center"/>
  </StackPanel>
</Button>
