<Button x:Class="lch_taskbar.TaskbarComponents.SpotifyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:lch_taskbar.TaskbarComponents"
             mc:Ignorable="d" 
             BorderThickness="0"
             Background="Transparent"
             d:Background="Black"
             VerticalAlignment="Center"
             Style="{StaticResource ButtonWithNoOver}"
             d:DesignHeight="15" d:DesignWidth="800">
    <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Image x:Name="SpotifyIcon" Source="/Ressources/spotify_icon.png" Margin="5" MaxHeight="25"/>
    <local:ConfiguredTextBlock x:Name="Spotify" Text="Title" Grid.Column="1" VerticalAlignment="Center" Margin="1,0,0,0"/>
  </Grid>
</Button>
